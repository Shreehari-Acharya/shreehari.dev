---
import "../styles/global.css";
import Socials from "../components/socials.astro";
import TabSection from "../components/tabs";
---

<html lang="en" class="overflow-y-scroll scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicon-16x16.png"
		/>
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Shreehari R Acharya</title>
		<meta
			name="description"
			content="Looking for a developer named Shreehari? You found the right one!"
		/>
		<meta
			name="keywords"
			content="Shreehari, Acharya, shreehari R Acharya, dev"
		/>
		<meta name="author" content="Shreehari R Acharya" />
		<link rel="canonical" href="https://shreehari.dev/" />
		<meta property="og:title" content="Shreehari R Acharya" />
		<meta
			property="og:description"
			content="Shreehari R Acharya, forging products with code"
		/>
		<meta property="og:url" content="https://shreehari.dev/" />
		<meta property="og:type" content="website" />
		<meta property="og:image" content="/og-image.png" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Shreehari R Acharya" />
		<meta
			name="twitter:description"
			content="Shreehari R Acharya, forging products with code"
		/>
		<meta name="twitter:image" content="/og-image.png" />
		<meta name="twitter:site" content="@06_Shreehari" />
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Shreehari R Acharya",
				"url": "https://shreehari.dev/",
				"sameAs": [
					"https://github.com/Shreehari-Acharya",
					"https://www.linkedin.com/in/shreehari-acharya/",
					"https://x.com/06_Shreehari",
					"https://shreehari-06.hashnode.dev/"
				],
				"jobTitle": "CS Engineering Student"
			}
		</script>

		<script
			src="https://cdn.jsdelivr.net/npm/iconify-icon@2.3.0/dist/iconify-icon.min.js"
		></script>
	</head>
	<body class="bg-gray-950 font-JetBrainsMono text-slate-200/90">
		<div class="min-h-screen flex flex-col">
			<main class="flex-grow">
				<div
					class="md:py-8 flex flex-col md:flex-row justify-center items-center gap-4 md:gap-16"
				>
					<!-- <img
						src="https://placehold.co/150"
						alt="photo"
						class="rounded-full border-4 border-slate-100 size-25 md:size-auto"
					/> -->
					<div class="py-6 flex flex-col items-start gap-2 md:gap-4">
						<h1
							class="text-4xl md:text-5xl text-slate-200 font-Sedan"
						>
							Shreehari R Acharya
						</h1>
						<p class="md:text-xl font-light py-4">
							<span id="customUnderline" class="text-slate-300">
								<span class="font-semibold">Forging</span> products
								with code</span
							>
						</p>
						<Socials />
					</div>
				</div>

				<TabSection client:visible />
			</main>

			<footer class="flex flex-col items-center pt-[10vh]">
				<p class="text-xs text-slate-500 py-2">
					Â© 2025 Shreehari R Acharya. All rights reserved.
				</p>
			</footer>
		</div>

		<script>
			import { annotate } from "rough-notation";
			const e = document.querySelector("#customUnderline");
			if (e instanceof HTMLElement) {
				const annotation = annotate(e, {
					type: "underline",
					color: "#f9a826",
					animationDuration: 2000,
					strokeWidth: 2,
				});
				setTimeout(() => {
					annotation.show();
				}, 2000);
			}
		</script>
	</body>
</html>
